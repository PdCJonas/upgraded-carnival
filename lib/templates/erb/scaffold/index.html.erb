<p id="notice"><%= notice %></p>

<h1>Quotes</h1>

<table class="w3-table-all">
  <thead>
    <tr class="w3-green">
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.content %></td>
        <td><%= quote.name %></td>
        <td><%= link_to 'Show', quote, class:"w3-button w3-yellow" %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote), class:"w3-button w3-orange" %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' }, class:"w3-button w3-red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path, class:"w3-button w3-yellow-green" %>
<br>
<p></p>